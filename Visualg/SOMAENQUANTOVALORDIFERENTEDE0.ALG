Algoritmo "SomaEnquantoValorDiferenteDe0"



Var

      soma, cont: Real


Inicio
      soma <- 0
      Escreva ("Digite um valor para a soma: ")
      Leia (cont)

      Enquanto cont <> 0 Faca
      soma <- soma + cont
      Escreval ("Total: ", soma)
      Escreva ("Digite um Valor para a soma: ")
      Leia (cont)
      Fimenquanto

      Escreval ("Resultado: ", soma)


Fimalgoritmo